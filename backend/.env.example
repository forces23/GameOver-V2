# Backend environment variables
# Copy to .env or .env.local and fill in real values.

# Auth0
AUTH0_AUDIENCE=https://your-api-identifier.example.com
AUTH0_DOMAIN=your-tenant.us.auth0.com

# MongoDB
MONGO_URI=mongodb+srv://<username>:<password>@cluster0.example.mongodb.net/?retryWrites=true&w=majority
MONGO_DB=gameovervault

# PriceCharting
URL_PRICE_CHARTING=https://www.pricecharting.com/api
API_KEY_PC=<YOUR_PRICECHARTING_API_KEY>

# IGDB / Twitch
URL_IGDB=https://api.igdb.com/v4
API_KEY_IGDB_CLIENT_ID=<YOUR_IGDB_CLIENT_ID>
API_KEY_IGDB_CLIENT_SECRET=<YOUR_IGDB_CLIENT_SECRET>
TWITCH_ACCESS_TOKEN=<YOUR_TWITCH_ACCESS_TOKEN>
